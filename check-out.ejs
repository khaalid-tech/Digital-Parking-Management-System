<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Check-Out - Digital Parking Management System</title>

    <!-- Bootstrap 5 CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
      rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  </head>
  <body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <i class="bi bi-p-square-fill me-2"></i>
          Digital Parking System
        </a>

        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link" href="/cashier/dashboard">
                <i class="bi bi-speedometer2 me-1"></i>Dashboard
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/cashier/check-in">
                <i class="bi bi-plus-circle me-1"></i>Check-In
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/cashier/check-out">
                <i class="bi bi-dash-circle me-1"></i>Check-Out
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/cashier/shift/open">
                <i class="bi bi-play-circle me-1"></i>Open Shift
              </a>
            </li>
          </ul>

          <ul class="navbar-nav">
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                data-bs-toggle="dropdown">
                <i class="bi bi-person-circle me-1"></i><%- getComplexStatus( user , user.full_name , 'Cashier' %>
              </a>
              <ul class="dropdown-menu dropdown-menu-end">
                <li>
                  <a class="dropdown-item" href="/auth/change-password">
                    <i class="bi bi-key me-2"></i>Change Password
                  </a>
                </li>
                <li><hr class="dropdown-divider" /></li>
                <li>
                  <a class="dropdown-item" href="/auth/logout">
                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                  </a>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="container-fluid py-4">
      <!-- Page Header -->
      <div class="page-header bg-light py-4 mb-4">
        <div class="container">
          <div class="row align-items-center">
            <div class="col-md-8">
              <h1 class="h2 mb-2">Vehicle Check-Out</h1>
              <p class="text-muted mb-0">
                Process payment and complete vehicle exit
              </p>
            </div>
            <div class="col-md-4 text-md-end">
              <a href="/cashier/dashboard" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Flash Messages -->
      <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i><%= error %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"></button>
      </div>
      <% } %>

      <% if (typeof success !== 'undefined' && success) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i><%= success %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"></button>
      </div>
      <% } %>

      <!-- Search Results -->
      <% if (typeof searchResults !== 'undefined' && searchResults.length > 0) { %>
      <div class="row mb-4">
        <div class="col-12">
          <div class="card border-0 shadow-sm">
            <div class="card-header bg-success text-white">
              <h5 class="mb-0">
                <i class="bi bi-search me-2"></i>
                Search Results for "<%= searchQuery %>"
                <span class="badge bg-light text-dark ms-2"><%= searchResults.length %> result(s)</span>
              </h5>
            </div>
            <div class="card-body p-0">
              <div class="table-responsive">
                <table class="table table-hover mb-0">
                  <thead class="table-light">
                    <tr>
                      <th>Ticket #</th>
                      <th>License Plate</th>
                      <th>Driver</th>
                      <th>Slot</th>
                      <th>Check-In Time</th>
                      <th>Duration</th>
                      <th>Amount</th>
                      <th>Status</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% searchResults.forEach(function(ticket) { %>
                      <tr>
                        <td>
                          <span class="badge bg-primary"><%= ticket.ticket_number %></span>
                        </td>
                        <td>
                          <strong><%= ticket.license_plate %></strong><br>
                          <small class="text-muted"><%= ticket.make %> <%= ticket.model %></small>
                        </td>
                        <td>
                          <%= ticket.driver_name %><br>
                          <small class="text-muted"><%= ticket.driver_phone %></small>
                        </td>
                        <td>
                          <span class="badge bg-info"><%= ticket.slot_number %></span>
                        </td>
                        <td>
                          <%= moment(ticket.check_in_time).format('MMM DD, YYYY HH:mm') %>
                        </td>
                        <td>
                          <% const checkIn = moment(ticket.check_in_time); const now = moment(); const duration = moment.duration(now.diff(checkIn)); const hours = Math.ceil(duration.asHours()); %>
                          <span class="badge bg-secondary"><%= hours %> hour(s)</span>
                        </td>
                        <td>
                          <strong class="text-success">$<%= (hours * ticket.hourly_rate).toFixed(2) %></strong>
                        </td>
                        <td>
                          <% if (ticket.payment_status === 'pending') { %>
                            <span class="badge bg-warning">Pending</span>
                          <% } else if (ticket.payment_status === 'paid') { %>
                            <span class="badge bg-success">Paid</span>
                          <% } else { %>
                            <span class="badge bg-secondary"><%= ticket.payment_status %></span>
                          <% } %>
                        </td>
                        <td>
                          <% if (ticket.payment_status === 'pending') { %>
                            <a href="/cashier/check-out/<%= ticket.id %>" class="btn btn-sm btn-success">
                              <i class="bi bi-cash-coin me-1"></i>Process Payment
                            </a>
                          <% } else if (ticket.payment_status === 'paid') { %>
                            <a href="/cashier/receipt/<%= ticket.id %>" class="btn btn-sm btn-info">
                              <i class="bi bi-receipt me-1"></i>View Receipt
                            </a>
                          <% } else { %>
                            <span class="text-muted">No action</span>
                          <% } %>
                        </td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% } %>

      <!-- Pending Tickets List -->
      <div class="row mb-4">
        <div class="col-12">
          <div class="card border-0 shadow-sm">
            <div class="card-header bg-warning text-dark">
              <h5 class="mb-0">
                <i class="bi bi-clock me-2"></i>
                <% if (typeof searchResults !== 'undefined' && searchResults.length > 0) { %>
                  Other Pending Check-Outs
                <% } else { %>
                  Pending Check-Outs
                <% } %>
              </h5>
            </div>
            <div class="card-body p-0">
              <% if (pendingTickets && pendingTickets.length > 0) { %>
                <div class="table-responsive">
                  <table class="table table-hover mb-0">
                    <thead class="table-light">
                      <tr>
                        <th>Ticket #</th>
                        <th>License Plate</th>
                        <th>Driver</th>
                        <th>Slot</th>
                        <th>Check-In Time</th>
                        <th>Duration</th>
                        <th>Amount</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% pendingTickets.forEach(function(ticket) { %>
                        <tr>
                          <td>
                            <span class="badge bg-primary"><%= ticket.ticket_number %></span>
                          </td>
                          <td>
                            <strong><%= ticket.license_plate %></strong><br>
                            <small class="text-muted"><%= ticket.make %> <%= ticket.model %></small>
                          </td>
                          <td>
                            <%= ticket.driver_name %><br>
                            <small class="text-muted"><%= ticket.driver_phone %></small>
                          </td>
                          <td>
                            <span class="badge bg-info"><%= ticket.slot_number %></span>
                          </td>
                          <td>
                            <%= moment(ticket.check_in_time).format('MMM DD, YYYY HH:mm') %>
                          </td>
                          <td>
                            <% const checkIn = moment(ticket.check_in_time); const now = moment(); const duration = moment.duration(now.diff(checkIn)); const hours = Math.ceil(duration.asHours()); %>
                            <span class="badge bg-secondary"><%= hours %> hour(s)</span>
                          </td>
                          <td>
                            <strong class="text-success">$<%= (hours * ticket.hourly_rate).toFixed(2) %></strong>
                          </td>
                          <td>
                            <a href="/cashier/check-out/<%= ticket.id %>" class="btn btn-sm btn-success">
                              <i class="bi bi-cash-coin me-1"></i>Process Payment
                            </a>
                          </td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
              <% } else { %>
                <div class="text-center py-4">
                  <i class="bi bi-inbox display-1 text-muted"></i>
                  <h5 class="text-muted mt-3">
                    <% if (typeof searchResults !== 'undefined' && searchResults.length > 0) { %>
                      No Other Pending Check-Outs
                    <% } else { %>
                      No Pending Check-Outs
                    <% } %>
                  </h5>
                  <p class="text-muted">
                    <% if (typeof searchResults !== 'undefined' && searchResults.length > 0) { %>
                      All other vehicles have been processed or there are no additional pending tickets.
                    <% } else { %>
                      All vehicles have been processed or there are no active tickets.
                    <% } %>
                  </p>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Search -->
      <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
          <div class="card border-0 shadow-sm">
            <div class="card-header bg-info text-white">
              <h5 class="mb-0">
                <i class="bi bi-search me-2"></i>
                Quick Ticket Search
              </h5>
            </div>
            <div class="card-body p-4">
              <form method="GET" action="/cashier/check-out">
                <div class="row">
                  <div class="col-md-8 mb-3">
                    <label for="search" class="form-label">
                      <i class="bi bi-ticket me-1"></i>Search by Ticket Number or License Plate
                    </label>
                    <input
                      type="text"
                      class="form-control"
                      id="search"
                      name="search"
                      placeholder="Enter ticket number or license plate"
                                             value="<%= typeof searchQuery !== 'undefined' , searchQuery , '' ) %>" />
                  </div>
                  <div class="col-md-4 mb-3">
                    <label class="form-label">&nbsp;</label>
                    <div class="d-grid gap-2">
                      <button type="submit" class="btn btn-info">
                        <i class="bi bi-search me-2"></i>Search
                      </button>
                      <% if (typeof searchQuery !== 'undefined' && searchQuery.trim()) { %>
                        <a href="/cashier/check-out" class="btn btn-outline-secondary">
                          <i class="bi bi-x-circle me-2"></i>Clear
                        </a>
                      <% } %>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer class="bg-light text-center text-muted py-3 mt-5">
      <div class="container">
        <small
          >&copy; 2024 Digital Parking Management System. All rights
          reserved.</small
        >
      </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery (for AJAX) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/main.js"></script>
  </body>
</html>
