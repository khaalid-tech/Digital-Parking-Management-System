<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Close Shift - Digital Parking Management System</title>

    <!-- Bootstrap 5 CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
      rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  </head>
  <body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <i class="bi bi-p-square-fill me-2"></i>
          Digital Parking System
        </a>

        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link" href="/cashier/dashboard">
                <i class="bi bi-speedometer2 me-1"></i>Dashboard
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/cashier/check-in">
                <i class="bi bi-plus-circle me-1"></i>Check-In
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/cashier/check-out">
                <i class="bi bi-dash-circle me-1"></i>Check-Out
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/cashier/shift/open">
                <i class="bi bi-play-circle me-1"></i>Open Shift
              </a>
            </li>
          </ul>

          <ul class="navbar-nav">
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                data-bs-toggle="dropdown">
                <i class="bi bi-person-circle me-1"></i><%- getComplexStatus( user , user.full_name , 'Cashier' %>
              </a>
              <ul class="dropdown-menu dropdown-menu-end">
                <li>
                  <a class="dropdown-item" href="/auth/change-password">
                    <i class="bi bi-key me-2"></i>Change Password
                  </a>
                </li>
                <li><hr class="dropdown-divider" /></li>
                <li>
                  <a class="dropdown-item" href="/auth/logout">
                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                  </a>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="container-fluid py-4">
      <!-- Page Header -->
      <div class="page-header bg-light py-4 mb-4">
        <div class="container">
          <div class="row align-items-center">
            <div class="col-md-8">
              <h1 class="h2 mb-2">Close Shift</h1>
              <p class="text-muted mb-0">
                End current shift and calculate final amounts
              </p>
            </div>
            <div class="col-md-4 text-md-end">
              <a href="/cashier/dashboard" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Flash Messages -->
      <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i><%= error %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"></button>
      </div>
      <% } %> <% if (typeof success !== 'undefined' && success) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i><%= success %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"></button>
      </div>
      <% } %>

      <!-- Shift Summary -->
      <% if (currentShift) { %>
      <div class="row mb-4">
        <div class="col-12">
          <div class="card border-0 shadow-sm">
            <div class="card-header bg-warning text-dark">
              <h5 class="mb-0">
                <i class="bi bi-clock-history me-2"></i>
                Current Shift Summary
              </h5>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-6">
                  <h6 class="text-primary">Shift Details</h6>
                  <ul class="list-unstyled">
                    <li class="mb-2">
                      <strong>Start Date:</strong>
                      <%= moment(currentShift.shift_date).format('MMM DD, YYYY')%>
                    </li>
                    <li class="mb-2">
                      <strong>Start Time:</strong>
                      <%= moment(currentShift.open_time).format('HH:mm') %>
                    </li>
                    <li class="mb-2">
                      <strong>Opening Amount:</strong>
                      <span class="text-success"
                        >$<%= currentShift.opening_amount %></span
                      >
                    </li>
                    <li class="mb-2">
                      <strong>Duration:</strong>
                      <%const startTime = moment(currentShift.open_time); const
                      now = moment(); const duration =
                      moment.duration(now.diff(startTime)); const hours =
                      Math.floor(duration.asHours()); const minutes =
                      duration.minutes(); %>
                      <span class="badge bg-info"
                        ><%= hours %>h <%= minutes %>m</span
                      >
                    </li>
                  </ul>
                </div>
                <div class="col-md-6">
                  <h6 class="text-primary">Financial Summary</h6>
                  <ul class="list-unstyled">
                    <li class="mb-2">
                      <strong>Total Collected:</strong>
                      <span class="text-success"
                        >$<%= shiftSummary.total_collected || '0.00' %></span
                      >
                    </li>
                    <li class="mb-2">
                      <strong>Total Tickets:</strong>
                      <span class="badge bg-primary"
                        ><%= shiftSummary.total_tickets || 0 %></span
                      >
                    </li>
                    <li class="mb-2">
                      <strong>Pending Payments:</strong>
                      <span class="badge bg-warning"
                        ><%= shiftSummary.pending_payments || 0 %></span
                      >
                    </li>
                    <li class="mb-2">
                      <strong>Expected Closing:</strong>
                      <span class="text-info"
                        >$<%= (parseFloat(currentShift.opening_amount) +parseFloat(shiftSummary.total_collected ||
                        0)).toFixed(2) %></span
                      >
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Close Shift Form -->
      <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
          <div class="card border-0 shadow-sm">
            <div class="card-header bg-danger text-white">
              <h5 class="mb-0">
                <i class="bi bi-stop-circle me-2"></i>
                End Shift
              </h5>
            </div>
            <div class="card-body p-4">
              <form method="POST" action="/cashier/shift/close">
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="close_time" class="form-label">
                      <i class="bi bi-clock me-1"></i>End Time *
                    </label>
                    <input
                      type="time"
                      class="form-control"
                      id="close_time"
                      name="close_time"
                      value="<%= moment().format('HH:mm') %>"
                      required />
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="closing_amount" class="form-label">
                      <i class="bi bi-cash-coin me-1"></i>Closing Amount *
                    </label>
                    <div class="input-group">
                      <span class="input-group-text">$</span>
                      <input
                        type="number"
                        class="form-control"
                        id="closing_amount"
                        name="closing_amount"
                        placeholder="0.00"
                        step="0.01"
                        min="0"
                        required />
                    </div>
                    <small class="form-text text-muted">
                      Count all cash and enter total amount
                    </small>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="total_collected" class="form-label">
                      <i class="bi bi-cash-stack me-1"></i>Total Collected
                    </label>
                    <div class="input-group">
                      <span class="input-group-text">$</span>
                      <input
                        type="number"
                        class="form-control"
                        id="total_collected"
                        name="total_collected"
                        value="<%= shiftSummary.total_collected || '0.00' %>"
                        placeholder="0.00"
                        step="0.01"
                        min="0"
                        readonly />
                    </div>
                    <small class="form-text text-muted">
                      Auto-calculated from transactions
                    </small>
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="variance" class="form-label">
                      <i class="bi bi-calculator me-1"></i>Variance
                    </label>
                    <div class="input-group">
                      <span class="input-group-text">$</span>
                      <input
                        type="number"
                        class="form-control"
                        id="variance"
                        name="variance"
                        placeholder="0.00"
                        step="0.01" />
                    </div>
                    <small class="form-text text-muted">
                      Difference between expected and actual (auto-calculated,
                      but editable)
                    </small>
                  </div>
                </div>

                <div class="mb-3">
                  <label for="notes" class="form-label">
                    <i class="bi bi-chat-text me-1"></i>Closing Notes
                  </label>
                  <textarea
                    class="form-control"
                    id="notes"
                    name="notes"
                    rows="3"
                    placeholder="Any issues, discrepancies, or special notes for this shift"></textarea>
                </div>

                <div class="alert alert-warning" role="alert">
                  <i class="bi bi-exclamation-triangle me-2"></i>
                  <strong>Important:</strong> Please verify all amounts before
                  closing the shift. This action cannot be undone.
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                  <a
                    href="/cashier/dashboard"
                    class="btn btn-outline-secondary me-md-2">
                    <i class="bi bi-x-circle me-2"></i>Cancel
                  </a>
                  <button type="submit" class="btn btn-danger">
                    <i class="bi bi-stop-circle me-2"></i>
                    Close Shift
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <% } else { %>
      <!-- No Active Shift -->
      <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
          <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
              <i class="bi bi-info-circle display-1 text-muted"></i>
              <h5 class="text-muted mt-3">No Active Shift</h5>
              <p class="text-muted">You don't have any open shifts to close.</p>
              <a href="/cashier/shift/open" class="btn btn-success">
                <i class="bi bi-play-circle me-2"></i>Open New Shift
              </a>
            </div>
          </div>
        </div>
      </div>
      <% } %>
    </main>

    <!-- Footer -->
    <footer class="bg-light text-center text-muted py-3 mt-5">
      <div class="container">
        <small
          >&copy; 2024 Digital Parking Management System. All rights
          reserved.</small
        >
      </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery (for AJAX) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/main.js"></script>

    <script>
             // Calculate variance when closing amount changes
       document.getElementById('closing_amount').addEventListener('input', function() {
         const openingAmount = parseFloat(<%= currentShift , currentShift.opening_amount , 0 ) %>);
         const totalCollected = parseFloat(<%= shiftSummary ? shiftSummary.total_collected : 0 %>);
        const closingAmount = parseFloat(this.value) || 0;

        const expectedAmount = openingAmount + totalCollected;
        const variance = closingAmount - expectedAmount;

        document.getElementById('variance').value = variance.toFixed(2);

        // Color code variance
        updateVarianceColor(variance);
      });

      // Handle manual variance input
      document.getElementById('variance').addEventListener('input', function() {
        const variance = parseFloat(this.value) || 0;
        updateVarianceColor(variance);
      });

      // Function to update variance color coding
      function updateVarianceColor(variance) {
        const varianceField = document.getElementById('variance');
        varianceField.classList.remove('text-danger', 'text-success');

        if (variance > 0) {
          varianceField.classList.add('text-success');
        } else if (variance < 0) {
          varianceField.classList.add('text-danger');
        }
      }

      // Initialize variance calculation on page load
      document.addEventListener('DOMContentLoaded', function() {
        const closingAmountField = document.getElementById('closing_amount');
        if (closingAmountField) {
          closingAmountField.dispatchEvent(new Event('input'));
        }
      });
    </script>
  </body>
</html>
