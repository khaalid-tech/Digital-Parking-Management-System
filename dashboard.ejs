<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cashier Dashboard - Digital Parking Management System</title>

    <!-- Bootstrap 5 CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
      rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  </head>
  <body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <i class="bi bi-p-square-fill me-2"></i>
          Digital Parking System
        </a>

        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link active" href="/cashier/dashboard">
                <i class="bi bi-speedometer2 me-1"></i>Dashboard
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/cashier/check-in">
                <i class="bi bi-plus-circle me-1"></i>Check-In
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/cashier/shift/open">
                <i class="bi bi-play-circle me-1"></i>Open Shift
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/cashier/shift/close">
                <i class="bi bi-stop-circle me-1"></i>Close Shift
              </a>
            </li>
          </ul>

          <ul class="navbar-nav">
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                data-bs-toggle="dropdown">
                <i class="bi bi-person-circle me-1"></i><%= user.full_name %>
              </a>
              <ul class="dropdown-menu dropdown-menu-end">
                <li>
                  <a class="dropdown-item" href="/auth/change-password">
                    <i class="bi bi-key me-2"></i>Change Password
                  </a>
                </li>
                <li><hr class="dropdown-divider" /></li>
                <li>
                  <a class="dropdown-item" href="/auth/logout">
                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                  </a>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="container-fluid py-4">
      <!-- Page Header -->
      <div class="page-header bg-light py-4 mb-4">
        <div class="container">
          <div class="row align-items-center">
            <div class="col-md-8">
              <h1 class="h2 mb-2 text-dark">Cashier Dashboard</h1>
              <p class="text-secondary mb-0">
                Welcome back, <%= user.full_name %>! Manage your parking
                operations.
              </p>
            </div>
            <div class="col-md-4 text-md-end">
              <span class="badge bg-success fs-6 text-white">
                <i class="bi bi-clock me-1"></i><%= formatDate(moment(), 'MMMM Do, YYYY') %>
              </span>
            </div>
          </div>
        </div>
      </div>

      <!-- Shift Status Card -->
      <% if (currentShift) { %>
      <div
        class="alert alert-success alert-dismissible fade show mb-4"
        role="alert">
        <div class="d-flex align-items-center">
          <i class="bi bi-play-circle-fill fs-4 me-3"></i>
          <div>
            <strong class="text-dark">Shift Open</strong> - Started at <%= formatTime(currentShift.open_time) %> <br />
            <small class="text-secondary"
              >Opening Amount: $<%= formatCurrency(currentShift.opening_amount) %></small
            >
          </div>
        </div>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"></button>
      </div>
      <% } else { %>
      <div
        class="alert alert-warning alert-dismissible fade show mb-4"
        role="alert">
        <div class="d-flex align-items-center">
          <i class="bi bi-exclamation-triangle fs-4 me-3"></i>
          <div>
            <strong class="text-dark">No Active Shift</strong> - Please open a
            shift to start working
          </div>
        </div>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"></button>
      </div>
      <% } %>

      <!-- Process Flow Summary -->
      <div class="row mb-4">
        <div class="col-12">
          <div class="card border-0 shadow-sm">
            <div class="card-header bg-info text-white">
              <h5 class="mb-0">
                <i class="bi bi-arrow-repeat me-2"></i>Process Flow Summary
              </h5>
            </div>
            <div class="card-body">
              <div class="row g-3">
                <div class="col-md-6 col-lg-3">
                  <div class="text-center p-3">
                    <div
                      class="bg-primary bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                      style="width: 60px; height: 60px">
                      <i class="bi bi-play-circle fs-3"></i>
                    </div>
                    <h6 class="text-dark">Open Shift</h6>
                    <p class="text-secondary small mb-0">
                      Set starting cash and begin work
                    </p>
                  </div>
                </div>
                <div class="col-md-6 col-lg-3">
                  <div class="text-center p-3">
                    <div
                      class="bg-success bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                      style="width: 60px; height: 60px">
                      <i class="bi bi-plus-circle fs-3"></i>
                    </div>
                    <h6 class="text-dark">Check-In</h6>
                    <p class="text-secondary small mb-0">
                      Register arriving vehicles
                    </p>
                  </div>
                </div>
                <div class="col-md-6 col-lg-3">
                  <div class="text-center p-3">
                    <div
                      class="bg-warning bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                      style="width: 60px; height: 60px">
                      <i class="bi bi-dash-circle fs-3"></i>
                    </div>
                    <h6 class="text-dark">Check-Out</h6>
                    <p class="text-secondary small mb-0">
                      Process payments when vehicles leave
                    </p>
                  </div>
                </div>
                <div class="col-md-6 col-lg-3">
                  <div class="text-center p-3">
                    <div
                      class="bg-danger bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                      style="width: 60px; height: 60px">
                      <i class="bi bi-stop-circle fs-3"></i>
                    </div>
                    <h6 class="text-dark">Close Shift</h6>
                    <p class="text-secondary small mb-0">
                      Reconcile cash and lock the shift for the day
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="row g-4 mb-4">
        <div class="col-md-6">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-primary text-white">
              <h5 class="mb-0">
                <i class="bi bi-lightning me-2"></i>Quick Actions
              </h5>
            </div>
            <div class="card-body">
              <div class="d-grid gap-3">
                <a href="/cashier/check-in" class="btn btn-success btn-lg">
                  <i class="bi bi-plus-circle me-2"></i>Check-In Vehicle
                </a>
                <a href="/cashier/check-out" class="btn btn-warning btn-lg">
                  <i class="bi bi-dash-circle me-2"></i>Check-Out Vehicle
                </a>
                <a href="/cashier/shift/open" class="btn btn-primary btn-lg">
                  <i class="bi bi-play-circle me-2"></i>Open Shift
                </a>
              </div>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-success text-white">
              <h5 class="mb-0">
                <i class="bi bi-clock me-2"></i>Shift Management
              </h5>
            </div>
            <div class="card-body">
              <% if (currentShift) { %>
              <div class="text-center mb-3">
                <h4 class="text-success text-dark">Shift Active</h4>
                <p class="text-secondary mb-2">
                  Started: <%= formatTime(currentShift.open_time) %>
                </p>
                <p class="text-secondary mb-3">
                  Opening Amount: $<%= formatCurrency(currentShift.opening_amount) %>
                </p>
                <a href="/cashier/shift/close" class="btn btn-danger">
                  <i class="bi bi-stop-circle me-2"></i>Close Shift
                </a>
              </div>
              <% } else { %>
              <div class="text-center mb-3">
                <h4 class="text-warning text-dark">No Active Shift</h4>
                <p class="text-secondary mb-3">
                  Start your work day by opening a shift
                </p>
                <a href="/cashier/shift/open" class="btn btn-success">
                  <i class="bi bi-play-circle me-2"></i>Open Shift
                </a>
              </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>

      <!-- Recent Activity -->
      <div class="row">
        <div class="col-12">
          <div class="card border-0 shadow-sm">
            <div class="card-header bg-secondary text-white">
              <h5 class="mb-0">
                <i class="bi bi-activity me-2"></i>Recent Activity
              </h5>
            </div>
            <div class="card-body">
              <% if (recentTickets && recentTickets.length > 0) { %>
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th class="text-dark">Ticket #</th>
                      <th class="text-dark">License Plate</th>
                      <th class="text-dark">Slot</th>
                      <th class="text-dark">Check-In Time</th>
                      <th class="text-dark">Status</th>
                      <th class="text-dark">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% recentTickets.forEach(function(ticket) { %>
                    <tr>
                      <td class="text-dark">
                        <span class="badge bg-primary text-white"><%= ticket.ticket_number %></span>
                      </td>
                      <td class="text-dark">
                        <span class="badge bg-secondary text-white"><%= ticket.license_plate || 'N/A' %></span>
                      </td>
                      <td class="text-dark"><%= ticket.slot_number %></td>
                      <td class="text-dark">
                        <small class="text-secondary"><%= formatDateTime(ticket.check_in_time) %></small>
                      </td>
                      <td>
                        <%- getPaymentStatusBadge(ticket.payment_status) %>
                      </td>
                      <td>
                        <% if (ticket.payment_status === 'pending') { %>
                        <a
                          href="/cashier/check-out/<%= ticket.id %>"
                          class="btn btn-sm btn-warning">
                          <i class="bi bi-dash-circle me-1"></i>Check-Out
                        </a>
                        <% } else if (ticket.payment_status === 'paid') { %>
                        <a
                          href="/cashier/receipt/<%= ticket.id %>"
                          class="btn btn-sm btn-info">
                          <i class="bi bi-receipt me-1"></i>Receipt
                        </a>
                        <% } %>
                      </td>
                    </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
              <% } else { %>
              <div class="text-center text-secondary py-4">
                <i class="bi bi-inbox fs-1 mb-3"></i>
                <p class="text-dark">No recent tickets</p>
                <small class="text-secondary"
                  >Start by checking in a vehicle</small
                >
              </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer class="bg-light text-center text-secondary py-3 mt-5">
      <div class="container">
        <small
          >&copy; 2024 Digital Parking Management System. All rights
          reserved.</small
        >
      </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery (for AJAX) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/main.js"></script>
  </body>
</html>
